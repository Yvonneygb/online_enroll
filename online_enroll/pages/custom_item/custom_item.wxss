/* pages/custom_item/custom_item.wxss */
.container{
  width: 100%;
  height: 1185rpx;
  background-color: #f8f8f8;
}
.tab{
	width: 100%;
	height: 68rpx;
	line-height: 68rpx;
	background-color: #f8f8f8;
	color: #a9a9a9;
	font-size: 14px;
	padding-left: 3.75%; 
	border-bottom: 1px solid #e3e3e3;
}

input , picker{
	width: 100%;
	height: 78rpx;
	line-height: 78rpx;
	background-color: #fff;
	color: #000;
	font-size: 14px;
	padding-left: 3.75%;
	border: none;
	border-bottom: 1px solid #e3e3e3;
}

textarea{
  width: 100%;
  min-height: 200rpx;
  background-color: #fff;
  border-top: 1px solid #e3e3e3;
  border-bottom: 1px solid #e3e3e3;
  padding-left:3%;
  padding-right:3%;
  font-size: 14px;
}

.selectd{
  float: left;
  width: 82.8125%;
}

.section{
      font-size:28rpx;
      margin-left: 50rpx;
      margin-top: 30rpx;
}
.on{display: block}
.off{display: none}

.type_icon{
  text-align:right;
  color:#e3e3e3;
  font-size:14px;
  margin-left:7%;
  font-weight:800;
}

.tip{
  width: 91.25%;
  height: 52rpx;
  line-height: 52rpx;
  margin: 0 auto;
  color: #adadad;
  font-size: 14px;
}

.add{
    width: 89.0625%;
    height: 82rpx;
    line-height: 82rpx;
    margin: 0 auto;
    margin-top: 26rpx;
    background-color: #028cf2;
    color: #fff;
    font-size: 16px;
    text-align: center;
    border-radius: 3px;
    border: 1px solid #1165d6;
}