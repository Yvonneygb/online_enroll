/* pages/enrolled_excel/enrolled_excel.wxss */
.container{
  width: 100%;
  height: 1090rpx;
  background-color: #f8f8f8;
}

image{
  vertical-align: middle;
}

scroll-view{
  width: 100%;
  min-height: 156rpx;
  /* max-height: 1000rpx; */
  white-space: nowrap;
}

.show_img{
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 10000;
  background-color: #000;
}

.item{
  width: 30%;  
  height: 64rpx; 
  text-align: center;
  display: inline-block;  
  font-size: 14px;
  overflow: scroll;
}

.num{
  display: fixed;
  left: 0;
}

.title{
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  color: #888888;
}

.value_box{
  width: 100%;
  min-height: 76rpx;
  max-height: 1000rpx;
}

.value{
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  border-top: 1px solid #eeeeee;
  border-bottom: 1px solid #eeeeee;
  background-color: #fff;
}

.value:first-child{
  border: none;
}

.no_more_data_box{
  width: 100%;
  height: 44rpx;
  line-height: 44rpx;
  color: #b2b2b2;
  margin-top: 44rpx;
}

.left{
  float: left;
  width: 15.625%;
  margin-left: 17.1875%;
}

.right{
  float: left;
  width: 15.625%;
}

.word{
  float: left;
  width: 32.1875%;
  text-align: center;
  background-color: #fff;
  font-size: 14px;
}

.tip{
  width: 88.125%;
  height: 66rpx;
  margin: 0 auto;
  margin-top: 90rpx;
  color: #c1c1c1;
  font-size: 12px;
}

.bottom{
  display: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f9fafd;
  font-size: 14px;
}

.bottom_item{
  float: left;
  width: 24%;
  color: #73acf9;
  border-right: 1px solid #ebebec;
  text-align: center;
}

.bottom_item:last-child{
  border: none;
}

.cover{
  position: absolute;
  width: 100%;
  height: 1200rpx;
  background-color: #808080;
  opacity: 0.7;
  z-index: 10000;
}

.cover_item_box{
  position: absolute;
  margin-top: 318rpx;
  width: 77.8125%;
  height: 172rpx;
  margin-left: 11.09375%;
  background-color: #fff;
  text-align: left;
  z-index: 100000;
  opacity: 1;
}

.cover_item{
  width:100%;
  height: 86rpx;
  line-height: 86rpx;
  background-color: #fff;
  padding-left: 5.9375%;
  border-bottom: 1px solid #f4f4f4;
  font-size: 14px;
}

.input_choose_item{
  width: 100%; 
  min-height: 78rpx;
  line-height: 78rpx;
  border-bottom: 1px solid #f4f4f4;
  padding-left:3.75%;
  font-size: 14px;
  font-weight: 400;
}

.hide{
  width: 0;
  height: 0;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
